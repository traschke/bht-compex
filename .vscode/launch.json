{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extract",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "extract",
                "${workspaceFolder}/testsentences.txt"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Extract with taxonomy",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "extract",
                "${workspaceFolder}/testsentences.txt",
                "--taxonomyjson",
                "${workspaceFolder}/tests/resources/test.json"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "evaluate",
                "${workspaceFolder}/tests/resources/test.tsv"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate folder",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "evaluate",
                "${workspaceFolder}/tests/resources/"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate bht-tesdata",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "evaluate",
                "${workspaceFolder}/tests/resources/bht-annotated"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate bht-tesdata with taxonomies",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "evaluate",
                "--taxonomyjson",
                "${workspaceFolder}/tests/resources/test.json",
                "${workspaceFolder}/tests/resources/bht-annotated"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate with objects",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/compex/__main__.py",
            "args": [
                "evaluate",
                "--objects",
                "${workspaceFolder}/tests/resources/test.tsv"
            ],
            "env": {
                "PYTHONPATH":"${workspaceRoot}",
                "CORENLP_HOME": "${workspaceRoot}/.corenlp"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "download_corenlp",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/download_corenlp.sh",
            "args": []
        }
    ]
}
